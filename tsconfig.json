{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "rootDirs": [
      "app"
    ],
    "baseUrl": "./",
    "paths": {
      "app/*": [
        "app/*"
      ],
      "src/*": [
        "client/src/*"
      ],
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "client/**/*"
  ]
}
